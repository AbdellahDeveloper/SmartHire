# Root .env for Docker Compose

# Database
MONGODB_URL=your_mongodb_url

# Auth
BETTER_AUTH_SECRET=your_better_auth_secret

# AI Keys
OPENAI_API_KEY=your_openai_api_key
GEMINI_API_KEY=your_gemini_api_key

# Google OAuth (Meet Scheduler)
CLIENT_ID=your_google_client_id
CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3012/callback

# Email
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_pass
ADMIN_EMAIL=your_admin_email

# Upstash Search
UPSTASH_SEARCH_REST_URL=your_upstash_search_url
UPSTASH_SEARCH_REST_TOKEN=your_upstash_search_token

# Storage
ENDPOINT=your_storage_endpoint
REGION=your_storage_region
SECRET_ACCESS_KEY=your_storage_secret_access_key
ACCESS_KEY_ID=your_storage_access_key_id

# URLs
NEXT_PUBLIC_WEBSITE_URL=http://localhost:3000

# Security
ENCRYPTION_KEY=your_32_character_encryption_key
